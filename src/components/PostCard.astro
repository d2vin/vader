---
import { Image } from "astro:assets";
import Link from "./Link.astro";
import { slugify, formatDate } from "../utils";

const { frontmatter, url, tagType } = Astro.props;

const Tag = tagType;

const { title, date, author, image, description, category } = frontmatter;
---

<article>
  <small>
    <a href={`/category/${slugify(category)}`}>{category}</a>
  </small>
  <a href={url} aria-hidden="true" tabindex="-1">
    <Image
      src={image.src}
      alt={image.alt}
      width="400"
      height="250"
      format="webp"
      quality={80}
      class="object-cover rounded-md w-64 h-48"
    />
  </a>
  <div>
    <div>
      <Tag>
        <a href={url}>{title}</a>
      </Tag>
      <small>
        by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
          formatDate(date)
        }
      </small>
    </div>
    <p>{description}</p>
    <Link href={url} text="Read Post" style="secondary" />
  </div>
</article>